<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.resumebuilder.presentation.EditResumeController" spacing="10" alignment="CENTER">
    <Label text="Edit Resume"/>
    <TextField fx:id="resumeNameField" promptText="Resume Name"/>
    <Button text="Save Resume" onAction="#handleSaveResumeButton"/>
    <Button text="Add Section" onAction="#handleAddSectionButton"/>
    <VBox fx:id="sectionsVBox" spacing="5"/>
</VBox>
