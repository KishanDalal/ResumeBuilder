<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.resumebuilder.presentation.EditSectionController" spacing="10" alignment="CENTER">
    <Label text="Edit Section"/>
    <TextField fx:id="sectionTitleField" promptText="Section Title"/>
    <TextArea fx:id="sectionContentTextArea" promptText="Section Content" prefRowCount="5"/>
    <Button text="Save Section" onAction="#handleSaveSectionButton"/>
</VBox>
